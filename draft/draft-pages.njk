---
pagination:
  data: drafts.folders
  size: 1
  alias: folder
layout: base-layout.njk
isDraft: true
eleventyComputed:
  title: "{{ folder.name }}"
  pagetitle: "üöß {{ folder.name }}"
  draftSlug: "{{ folder.slug }}"
  permalink: "/draft/{{ folder.slug }}/index.html"
---
<article data-draft-slug="{{ folder.slug }}">
<h1>
  <span id="view-data-json-btn" class="draft-icon" title="Voir data.json">üöß</span>
  <span id="draft-title" contenteditable="false" title="Cliquer pour modifier le titre">{{ folder.title or folder.name }}</span>
  <button id="generate-template-btn" class="generate-template-btn-inline" disabled title="" style="visibility: hidden;">
    G√©n√©rer le template
  </button>
</h1>

<div id="generate-template-status"></div>
<div id="test-preview-container" style="display: none;">
  <div class="preview-header">
    <h4><a href="/draft/{{ folder.slug }}/preview/tests/{{ folder.slug }}/" target="_blank">Aper√ßu du test g√©n√©r√©</a></h4>
    <button id="publish-btn" class="publish-btn" title="Publier le test">üì§ Publier</button>
    <button id="refresh-preview-btn" class="refresh-preview-btn" title="Recharger l'aper√ßu">‚Üª Recharger</button>
  </div>
  <iframe id="test-preview-iframe"></iframe>
</div>

<div id="publish-results" style="display: none;">
  <h3>‚úÖ Test publi√© avec succ√®s !</h3>

  <div class="publish-section">
    <h4>Pour Claude : Ajouter des liens dans les tests existants</h4>
    <pre id="claude-prompt"></pre>
    <button class="copy-btn" data-copy-target="claude-prompt">üìã Copier</button>
  </div>

  <div class="publish-section">
    <h4>Commandes Git</h4>
    <pre id="git-commands"></pre>
    <button class="copy-btn" data-copy-target="git-commands">üìã Copier</button>
  </div>

  <div class="publish-section">
    <h4>Fichiers copi√©s</h4>
    <ul id="copied-files-list"></ul>
  </div>
</div>

<div class="draft-notes-section">
  <label for="draft-notes">Notes sur le test :</label>
  <textarea id="draft-notes" placeholder="Comment l'appareil a √©t√© test√©, pourquoi il est int√©ressant, observations particuli√®res..." rows="4"></textarea>
</div>

{% if folder.profiles.length > 0 %}
<section id="profiles-section">
  <h2>Profils</h2>
  {% for profile in folder.profiles %}
  <div class="profile-item" data-profile="{{ profile.filename }}" data-slug="{{ folder.slug }}">
    <div class="profile-header">
      <button class="save-range-btn">Sauvegarder</button>
      <div class="profile-info">
        <span class="profile-range-info"></span>
        <code class="profile-filename">{{ profile.filename }}</code>
        <span class="profile-size">({{ (profile.size / 1024) | round(1) }} Ko)</span>
      </div>
      <div class="profile-controls">
        <div class="profile-shortname-wrapper">
          <input type="text" class="profile-shortname" placeholder="Nom court" data-profile="{{ profile.filename }}">
          <button class="set-profile-shortname-btn" title="D√©finir comme 'profile'">‚≠ê</button>
        </div>
        <button class="toggle-profiler-btn">Ouvrir le profiler</button>
      </div>
    </div>

    <div class="profiler-container" style="display: none;">
      <iframe class="profiler-iframe"></iframe>
    </div>
  </div>
  {% endfor %}

  <div id="saved-ranges">
    <h3>Plages sauvegard√©es</h3>
    <div id="saved-ranges-list"></div>
  </div>
</section>
{% endif %}

{% if folder.images.length > 0 %}
<section>
  <h2>Images</h2>
  <div class="images-grid">
    {% for image in folder.images %}
    <div class="image-item clickable-image" data-image="{{ image }}">
      <img src="/draft/{{ folder.slug }}/{{ image }}" alt="{{ image }}">
      <code>{{ image }}</code>
    </div>
    {% endfor %}
  </div>

  <div id="image-previews">
    <h3>Aper√ßus des images</h3>
    <div id="image-previews-list"></div>
  </div>
</section>

<div id="image-modal" style="display: none;">
  <div class="modal-overlay"></div>
  <div class="modal-content">
    <div class="modal-header">
      <div class="modal-title-section">
        <span id="modal-image-filename">Image</span>
        <div class="shortname-input-group">
          <input type="text" id="image-name" placeholder="Nom court (ex: vue-face, √©tiquette)">
          <button id="set-as-thumbnail-btn" type="button" title="D√©finir comme vignette (shortname: img)">üñºÔ∏è</button>
        </div>
      </div>
      <button class="close-modal-btn">‚úï</button>
    </div>
    <div class="modal-body">
      <div id="modal-image-container">
        <img id="modal-image" src="" alt="">
        <div id="crop-overlay">
          <svg id="crop-svg">
            <defs>
              <mask id="crop-mask">
                <rect width="100%" height="100%" fill="white"/>
                <polygon id="crop-polygon-mask" fill="black" points=""></polygon>
              </mask>
            </defs>
            <rect width="100%" height="100%" fill="rgba(0, 0, 0, 0.5)" mask="url(#crop-mask)"/>
            <polygon id="crop-polygon" points=""></polygon>
            <line class="crop-edge" data-edge="0" stroke-width="16" stroke="transparent" stroke-linecap="round"></line>
            <line class="crop-edge" data-edge="1" stroke-width="16" stroke="transparent" stroke-linecap="round"></line>
            <line class="crop-edge" data-edge="2" stroke-width="16" stroke="transparent" stroke-linecap="round"></line>
            <line class="crop-edge" data-edge="3" stroke-width="16" stroke="transparent" stroke-linecap="round"></line>
            <circle class="crop-corner" r="8" data-corner="0"></circle>
            <circle class="crop-corner" r="8" data-corner="1"></circle>
            <circle class="crop-corner" r="8" data-corner="2"></circle>
            <circle class="crop-corner" r="8" data-corner="3"></circle>
          </svg>
        </div>
        <canvas id="magnifier-canvas"></canvas>
      </div>
      <div class="modal-controls">
        <div class="image-size-controls">
          <label>Largeur d'affichage:</label>
          <button class="width-btn" data-width="250">250px</button>
          <button class="width-btn" data-width="300">300px</button>
          <button class="width-btn active" data-width="500">500px</button>
          <button class="width-btn" data-width="512">512px</button>
          <button class="width-btn" data-width="700">700px</button>
          <button class="width-btn" data-width="800">800px</button>
          <button class="width-btn" data-width="1000">1000px</button>
          <input type="number" id="custom-width" placeholder="Autre" min="30" max="2000" step="1">
          <button id="save-image-metadata-btn">Sauvegarder</button>
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}

<div id="data-json-modal" style="display: none;">
  <div class="modal-overlay"></div>
  <div class="modal-content">
    <div class="modal-header">
      <h3>data.json</h3>
      <button id="close-data-json-btn">‚úï</button>
    </div>
    <div class="modal-body">
      <pre id="data-json-content"></pre>
    </div>
  </div>
</div>
</article>

